<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Background rectangle -->
        <item android:drawable="@android:color/white" />

        <!-- Top strip -->
        <item
            android:left="24dp"
            android:right="24dp"
            android:top="24dp"
            android:bottom="0dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/btnTextColor" />
                <size
                    android:width="32dp"
                    android:height="4dp" />
            </shape>
        </item>

        <!-- Middle strip -->
        <item
            android:left="24dp"
            android:right="24dp"
            android:top="48dp"
            android:bottom="0dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/btnTextColor" />
                <size
                    android:width="32dp"
                    android:height="4dp" />
            </shape>
        </item>

        <!-- Bottom strip -->
        <item
            android:left="24dp"
            android:right="24dp"
            android:top="72dp"
            android:bottom="0dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/btnTextColor" />
                <size
                    android:width="32dp"
                    android:height="4dp" />
            </shape>
        </item>
    </layer-list>

</selector>